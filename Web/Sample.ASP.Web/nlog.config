<?xml version="1.0"?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Warn"
      internalLogFile="c:\temp\internal-nlog.txt">

  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <targets>
    <target name="f-all" xsi:type="File"
            fileName="${basedir}\logs\${shortdate}.log"
            encoding="utf-8"
            layout="[${longdate}][${level}] ${message} ${exception:format=ToString}" />
    <target name="f-services" xsi:type="File"
            fileName="${basedir}\logs\services\${shortdate}.log"
            encoding="utf-8"
            layout="[${longdate}][${level}] ${message} ${exception:format=ToString}" />
  </targets>
  <rules>
    <logger name="Sample.ASP.Web.Services.*" writeTo="f-services" minlevel="Trace" final="true"/>
    <logger name="*" minlevel="Trace" maxlevel="Error" writeTo="f-all" />
  </rules>
</nlog>